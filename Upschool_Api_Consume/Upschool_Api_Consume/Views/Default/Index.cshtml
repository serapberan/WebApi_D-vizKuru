@model List<CategoryViewModel>
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Durumu</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@item.CategoryID</th>
                    <td>@item.CategoryName</td>
                    <td>@item.Status</td>
                    <td><a href="/Default/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Default/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Default/AddCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
</div>
